<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00303F"
    tools:context=".DenunciaActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#00303F"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTitulo"
                    android:layout_width="276dp"
                    android:layout_height="50dp"
                    android:background="#00303F"
                    android:gravity="center"
                    android:text="LANÇAR DENUNCIAS"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonLimpar"
                    android:layout_width="70dp"
                    android:layout_height="29dp"
                    android:background="#DCAE1D"
                    android:text="LIMPAR"
                    android:textColor="#00303F"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="#DCAE1D" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/LinearEsquerda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewNumeroDenuncia"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#00303F"
                        android:gravity="center|center_horizontal|left"
                        android:padding="10dp"
                        android:text="Nº DENUNCIA"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewDenunciante2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#00303F"
                        android:gravity="center|center_horizontal|left"
                        android:padding="10dp"
                        android:text="DENUNCIANTE"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewDenunciado"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#00303F"
                        android:gravity="center|center_horizontal|left"
                        android:padding="10dp"
                        android:text="DENUNCIADO"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewLogradouro"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#00303F"
                        android:gravity="center|center_horizontal|left"
                        android:padding="10dp"
                        android:text="LOGRADOURO"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewNumeroImovel"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#00303F"
                        android:gravity="center|center_horizontal|left"
                        android:padding="10dp"
                        android:text="Nº IMOVEL"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewBairro"
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:background="#00303F"
                        android:gravity="center|center_horizontal|left"
                        android:padding="10dp"
                        android:text="BAIRRO"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewLogradouro"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#00303F"
                        android:gravity="center|center_horizontal|left"
                        android:padding="10dp"
                        android:text="TIPO IMÓVEL"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewNumeroImovel"
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:background="#00303F"
                        android:gravity="center|center_horizontal|left"
                        android:padding="10dp"
                        android:text="T. DENUNCIA"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewDetalhes"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#00303F"
                        android:gravity="center|center_horizontal|left"
                        android:padding="10dp"
                        android:text="DETALHES"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearDireita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/editTextDenunciante"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="left|center"
                        android:hint="** Denunciante **"
                        android:inputType="number"
                        android:paddingLeft="7dp"
                        android:textColor="#DCAE1D"
                        android:textColorHint="#DCAE1D"
                        android:textSize="14dp"
                        android:theme="@style/MyEditTextTheme" />

                    <EditText
                        android:id="@+id/editTextDenunciado"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:gravity="left|center"
                        android:hint="** Denunciado **"
                        android:inputType="number"
                        android:paddingLeft="7dp"
                        android:textColor="#DCAE1D"
                        android:textColorHint="#DCAE1D"
                        android:textSize="14dp"
                        android:theme="@style/MyEditTextTheme" />

                    <EditText
                        android:id="@+id/editTextLogradouro"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="left|center"
                        android:hint="** Logradouro **"
                        android:inputType="number"
                        android:paddingLeft="7dp"
                        android:textColor="#DCAE1D"
                        android:textColorHint="#DCAE1D"
                        android:textSize="14dp"
                        android:theme="@style/MyEditTextTheme" />

                    <EditText
                        android:id="@+id/editTextNumeroImovel"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:gravity="left|center"
                        android:hint="** Digite o numero do Imovel **"
                        android:inputType="textPersonName"
                        android:paddingLeft="7dp"
                        android:textColor="#DCAE1D"
                        android:textColorHint="#DCAE1D"
                        android:textSize="14dp"
                        android:theme="@style/MyEditTextTheme" />

                    <Spinner
                        android:id="@+id/spinnerBairro"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        style="@style/spinner_layout"
                        android:spinnerMode="dialog"
                        />

                    <Spinner
                        android:id="@+id/spinnerTipoImovel"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        style="@style/spinner_layout"
                        android:spinnerMode="dialog"
                        />

                    <Spinner
                        android:id="@+id/spinnerTipoVisita"
                        style="@style/spinner_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:spinnerMode="dialog" />

                    <EditText
                        android:id="@+id/editTextDetalhes"
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="left|center"
                        android:hint="** Detalhes da Denuncia **"
                        android:inputType="number"
                        android:paddingLeft="7dp"
                        android:textColor="#DCAE1D"
                        android:textColorHint="#DCAE1D"
                        android:textSize="14dp"
                        android:theme="@style/MyEditTextTheme" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="#DCAE1D" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#00303F"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTipoImovel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/buttonSalvar"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#DCAE1D"
                    android:text="SALVAR"
                    android:textColor="#00303F"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/buttonCorrigir"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#DCAE1D"
                    android:text="CORRIGIR"
                    android:textColor="#00303F"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/buttonExcluir"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#DCAE1D"
                    android:text="EXCLUIR"
                    android:textColor="#00303F"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/buttonListar"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#DCAE1D"
                    android:text="LISTAR"
                    android:textColor="#00303F"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="#DCAE1D" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_weight="1"
                    android:background="#00303F"
                    android:gravity="center"
                    android:text="LISTA DE DENUNCIAS GERADAS HOJE"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_weight="1"
                    android:background="#DCAE1D" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewTextTotalProducao"
                        android:layout_width="189dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="#00303F"
                        android:gravity="center"
                        android:text="NÚMEROS DE DENUNCIAS HOJE ->"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewTotalProducao"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="#00303F"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:background="#DCAE1D" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:background="#ffffff"
                android:textSize="12dp" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>